\AtBeginEnvironment{problem}{%
  \setbeamercolor{block title}{use=example text,fg=purple,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=white}
}
\AtBeginEnvironment{solution}{%
  \setbeamercolor{block title}{use=example text,fg=lgtblue,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=yellow}
}
\setbeamertemplate{qed symbol}{\textcolor{lgtblue}{$\blacksquare$}}
\AtBeginEnvironment{proof}{%
  \setbeamercolor{block title}{use=example text,fg=lgtblue,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example}
}
\newtheorem{proofnoend}{Proof.}
\AtBeginEnvironment{proofnoend}{%
  \setbeamercolor{block title}{use=example text,fg=lgtblue,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=yellow}
}

