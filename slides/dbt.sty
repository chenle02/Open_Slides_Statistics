\AtBeginEnvironment{theorem}{%
  \setbeamercolor{block title}{use=example text,fg=coral,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=white}
}
\AtBeginEnvironment{lemma}{%
  \setbeamercolor{block title}{use=example text,fg=coral,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=white}
}
\AtBeginEnvironment{corollary}{%
  \setbeamercolor{block title}{use=example text,fg=coral,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=yellow}
}

\newtheorem{remark}{Remark}
\AtBeginEnvironment{remark}{%
  \setbeamercolor{block title}{fg=blue,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=yellow}
}

\newtheorem{emptytitle}{}
\AtBeginEnvironment{emptytitle}{%
  \setbeamercolor{block title}{fg=blue,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=yellow}
}

\AtBeginEnvironment{definition}{%
  \setbeamercolor{block title}{fg=yellow,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=yellow}
}
\AtBeginEnvironment{definitions}{%
  \setbeamercolor{block title}{fg=yellow,bg=background}
  % \setbeamercolor{block body}{parent=normal text,use=block title example,fg=yellow}
}

